---
import background from '../assets/background.svg';
import { initializeApp } from 'firebase/app';
import { getAuth, signInAnonymously } from 'firebase/auth';
import { getFirestore, doc, setDoc } from 'firebase/firestore';
---
<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
    <main>
		<section id="hero">
			<h1> sign in with your email and acess code </h1>
        <form id="loginForm">
            <input type="text" id="nameInput" name="fname" placeholder="Name">
            <input type="email" id="emailInput" name="email" placeholder="Email">
            <input type="text" id="accessCodeInput" name="acesscode" placeholder="Acess Code">
			<button type="submit" id="loginButton">Enter</button> 
			<p id="messageArea" style="color: red;"></p>


        </form>
	</section>

    </main>

</div>





<style>
:root {
	--gradient-bg: linear-gradient(135deg, #1f1f2b, #0e0e12);
	--primary: #6366f1;
	--accent: #ec4899;
	--text: #f3f4f6;
	--subtle: #9ca3af;
	--input-bg: #1c1c24;
	--input-border: #2e2e3f;
	--input-placeholder: #6b7280;
}

#background {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: -1;
	background: var(--gradient-bg);
	filter: blur(100px);
}

#container {
	font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
	color: var(--text);
	height: 100%;
	background: var(--gradient-bg);
}

main {
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	padding: 1rem;
}

#hero {
	display: flex;
	flex-direction: column;
	gap: 1rem;
	width: 100%;
	max-width: 400px;
	background: #181820;
	padding: 2rem;
	border-radius: 1rem;
	box-shadow: 0 8px 32px rgba(0, 0, 0, 0.6);
}

h1 {
	font-size: 22px;
	margin: 0;
	color: var(--text);
	text-align: center;
}

form {
	display: flex;
	flex-direction: column;
	gap: 1rem;
	width: 100%;
}

form input {
	width: 100%;
	padding: 12px;
	border-radius: 0.75rem;
	border: 1px solid var(--input-border);
	background-color: var(--input-bg);
	color: var(--text);
	font-size: 14px;
	transition: border-color 0.2s, box-shadow 0.2s;
}

form input::placeholder {
	color: var(--input-placeholder);
}

form input:focus {
	outline: none;
	border-color: var(--primary);
	box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.3);
}

#loginButton {
	background: linear-gradient(145deg, var(--primary), var(--accent));
	color: white;
	padding: 12px;
	font-size: 15px;
	border: none;
	border-radius: 0.75rem;
	cursor: pointer;
	transition: opacity 0.2s, transform 0.2s;
}

#loginButton:hover {
	opacity: 0.9;
	transform: scale(1.01);
}

#messageArea {
	text-align: center;
	font-size: 14px;
	color: #f87171; /* red-400 */
}

@media screen and (max-width: 768px) {
	#hero {
		padding: 1.5rem;
	}

	h1 {
		font-size: 18px;
	}
}

</style>

<script src="./login.js"></script>
